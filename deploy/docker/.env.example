# ===========================================
# WanderFlow 环境变量配置
# ===========================================
# 复制此文件为 .env 并修改配置
# ===========================================

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here  # ⚠️ 请修改为强密码
DB_NAME=wanderflow

# ===========================================
# JWT 安全配置
# ===========================================
# 生成方式: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here-min-32-characters  # ⚠️ 请修改

# Token 过期时间（分钟）- 7天
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================
# AI API 配置（使用 Anthropic Claude）
# ===========================================
# Anthropic API Key: https://console.anthropic.com/
ANTHROPIC_AUTH_TOKEN=sk-ant-api03-xxxxxxxxxxxx  # ⚠️ 请填入真实 API Key

# Claude 模型配置
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_DEFAULT_OPUS_MODEL=claude-opus-4-20250514
ANTHROPIC_DEFAULT_SONNET_MODEL=claude-sonnet-4-20250514

# ===========================================
# Redis 配置（可选，用于缓存）
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# 应用配置
# ===========================================
# 调试模式（生产环境必须设为 false）
DEBUG=false

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 文件上传最大大小（字节）- 50MB
MAX_FILE_SIZE=52428800

# ===========================================
# 第三方服务 API Keys（可选）
# ===========================================
# 百度地图: https://lbsyun.baidu.com/
MAP_API_KEY=
MAP_SECRET_KEY=

# 天气 API: https://www.weatherapi.com/
WEATHER_API_KEY=

# ===========================================
# CORS 配置
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# ===========================================
# 时区
# ===========================================
TZ=Asia/Shanghai
